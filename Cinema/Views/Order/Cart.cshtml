@model List<Order.Dal.Entities.CartFilm>


@if (Model.Count == 0)
{
    <h1>Nic tu není :(</h1>
}

@foreach (var item in Model)
{
    <div class="row">
        <div class="col-lg-3 col-md-3 col-sm-3 col-xs-6">
            <img width="150" height="250" src="@item.Film.Image" class="img-responsive radius" />
        </div>
        <div class="col-lg-5 col-md-5 col-sm-5 col-xs-6">
            <h2 class="center">@item.Film.Name</h2>

            <h5 class="center date">@item.IdDate.ToString("d") @item.IdTime.ToString("t")</h5>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-4">
            @if (item.Amount == null)
            {
                <div class="center">
                    <a asp-area="" asp-controller="Order" asp-action="OrderContinue" asp-route-id="@item.IdFilm" asp-route-date="@item.IdDate" class="btn kosik">Vyber si mista</a>
                </div>
            }
            else
            {
                <div class="center">
                    <a asp-area="" asp-controller="Order" asp-action="OrderFinish" class="btn kosik">Dokonci objednavku</a>
                </div>
            }
            <div class="center">
                <a asp-area="" asp-controller="Order" asp-action="DeleteFilm" asp-route-IdCartFilm="@item.IdCartFilm" class="btn btn-danger">Vymaz Film</a>
            </div>
        </div>
    </div>
    <hr />
}