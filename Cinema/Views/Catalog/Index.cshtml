@model List<Catalog.Dal.Entities.December>

@{
    ViewData["Title"] = "Catalog";
}
<body class="change">
    <div class="index-page">
        <div class="wrapper">
            <div id="changeHeight" class="header header-info carouselChange">
                <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
                    <div class="carousel-inner" role="listbox">
                        <div class="item active">
                            <img src="~/images//CatalogCarousel/ThorRagnarok.jpg" class="img-responsive radius" />
                            <div class="carousel-caption" role="option">

                            </div>
                        </div>
                        <div class="item">
                            <img src="~/images//CatalogCarousel/StarWars.jpg" class="img-responsive radius" />
                            <div class="carousel-caption" role="option">

                            </div>
                        </div>
                        <div class="item">
                            <img src="~/images//CatalogCarousel/Murder.jpg" class="img-responsive radius" />
                            <div class="carousel-caption" role="option">

                            </div>
                        </div>
                        <div class="item">
                            <img src="~/images//CatalogCarousel/JusticeLeague.png" class="img-responsive radius" />
                            <div class="carousel-caption" role="option">

                            </div>
                        </div>
                    </div>
                    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
            <div class="main main-raised">

                @foreach (var item in Model)
            {
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-11 col-md-11">
                                <h2>@item.DateOfMonth.Date.ToString("d")</h2>
                                <hr class="style-four">
                            </div>
                        </div>
                    </div>
                    foreach (var tmp in @item.Film)
                    {
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2 text-center timeShow">
                                    @tmp.Time.OverallTime.ToString("t")
                                </div>
                                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-5 vertical">
                                    <div class="media">
                                        <a asp-controller="Item" asp-action="Index" asp-route-id="@tmp.IdFilm">
                                            <img width="140" height="200" src="@tmp.Image" class="radius" />
                                        </a>
                                    </div>
                                </div>
                                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-5">
                                    <a asp-controller="Item" asp-action="Index" asp-route-id="@tmp.IdFilm">
                                        <h3>@tmp.Name</h3>
                                    </a>
                                    <input type="hidden" name="product-id" value="@tmp.Access.Age" />
                                    <span class="label label-warning" title="Přístupnost od @tmp.Access.Age let">@tmp.Access.Age</span>
                                    <span class="label label-default">@tmp.Dimenzes.DimensionType</span>
                                </div>
                                <div class="col-lg-2 col-md-2 text-center">
                                    <input type="hidden" name="product-id" value="@tmp.IdFilm" />
                                    <a asp-controller="Order" asp-action="Order" asp-route-id="@tmp.IdFilm" asp-route-date="@item.DateOfMonth">
                                        <button type="button" class="btn btn-success btn-round priceHeight" value="@tmp">Koupit</button>
                                    </a>
                                </div>
                            </div>
                            <br />
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</body>