@model List<Catalog.Dal.Entities.December>

@{
    ViewData["Title"] = "Catalog";
}

<div class="index-page">
<div class="wrapper">
    <div id="changeHeight" class="header header-filter" style="background-image: url('/images/bg2.jpeg');">
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <div class="brand">
                        <h1>Material Kit.</h1>
                        <h3>A Badass Bootstrap UI Kit based on Material Design.</h3>
                    </div>
                </div>
            </div>

        </div>
    </div>
    @*<div class="jumbotron">
            <h2>Hello, world!</h2>
            <p>...</p>
            <p><a class="btn btn-primary btn-lg" href="#" role="button">Learn more</a>
            </p>
        </div>*@
    <div class="main main-raised" >

            @foreach (var item in Model)
            {
                <div class="container">
                    <div class="row">
                        <div class="col-lg-11 col-md-11">
                            <h2>@item.DateOfMonth.Date.ToString("d")</h2>
                            <hr class="style-four">
                        </div>
                    </div>
                    </div>
                foreach (var tmp in @item.Film)
                {
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-2 col-md-2 text-center timeShow">
                                @tmp.Time.OverallTime.ToString("t")
                            </div>
                            <div class="col-lg-2 col-md-2">
                                <div class="media">
                                    <img width="140" height="200" src="@tmp.Image"/>
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-4">
                                <h3>@tmp.Name</h3>
                                <span class="label label-warning">@tmp.IdFilm</span>
                            </div>
                            <div class="col-lg-2 col-md-2 text-center">
                                <button type="button" class="btn btn-success btn-round priceHeight">Koupit</button>
                            </div>
                        </div>
                        <br/>
                    </div>
                }
            }
        </div>
    </div>
    </div>